{
  "name": "template-node-express-api",
  "version": "1.0.0",
  "description": "The boilerplate for APIs using express",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "nodemon",
    "build": "tsc ",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint ./src/** --ext .ts",
    "lint:fix": "eslint --fix ./src/** --ext .ts",
    "test": "jest --coverage --forceExit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oscareli/template-node-express-api.git"
  },
  "keywords": [
    "API",
    "node",
    "express"
  ],
  "author": "Oscar Oliveira",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/oscareli/template-node-express-api/issues"
  },
  "homepage": "https://github.com/oscareli/template-node-express-api#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.5",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@jest/globals": "^29.6.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "husky": "^8.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0"
  }
}
